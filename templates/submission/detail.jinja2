{% extends 'base.jinja2' %}

{% block title %} 提交 {% endblock %}

{% block content%}


    <table class="ui celled table center aligned compact unstackable">
        <thead>
            <th>提交者</th>
            <th>题目</th>
            <th>时间</th>
        </thead>
        <tbody>
            <td>{{submission.submit_author}}</td>
            <td>{{submission.assignment.title}}</td>
            <td>{{submission.submit_time | date('Y-m-d H:i')}}</td>
        </tbody>
    </table>

    {% if submission.submit_content %}
        <div class="ui header">Submit_content:</div>
        <div class="ui segment">
            {{submission.submit_content}}
        </div>
    {% endif %}

    {% if submission.submit_pdf %}
        <div class="ui header">PDF:</div>
        <div class="ui segment">
            {# NEED TODO: You need to modify items' ID here #}
            <button class="ui button" id="preview">点击预览</button>
            <div id="modal" class="ui basic modal">
                <iframe src="{{submission.submit_pdf.url}}" width="100%" height="700" scrolling="yes"></iframe>
            </div>

            <script>
                $(document).ready(function() {
                    $("#preview").click(function() {
                        $('#modal').modal('show');
                    });
                });
            </script>
        </div>
    {% endif %}

    

{% endblock %}